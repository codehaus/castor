<?xml version="1.0"?>
<mapping>

  <class name="xml.Foo">
    <map-to xml="foo" />
    <field name="bar" type="xml.Bar" collection="vector" >
      <xml name="bar" />
    </field>
  </class>

  <class name="xml.Bar">
    <map-to xml="bar" />
    <field name="baz" type="string" >
      <xml name="baz-0" />
    </field>
  </class>

  <class name="xml.Bar1" extends="xml.Bar" >
    <map-to xml="bar1" />
    <field name="baz1" type="integer" >
      <xml name="baz-1" />
    </field>
  </class>

  <class name="xml.Bar2" extends="xml.Bar" >
    <map-to xml="bar2" />
    <field name="baz2" type="boolean" >
      <xml name="baz-2" />
    </field>
  </class>

</mapping>