<directories>
  <directory dir-name="local" root="dc=exoffice,dc=com">
    <connection host="localhost" ldap-ver="2"/>
    <mapping>
      <object type="dax.Person"
              ldap-class="person"
        <field name="first" ldap-name="sn"/>
        <field name="full" ldap-name="cn"/>
        <field name="last" ldap-name="givenname"/>
        <field name="uid" ldap-name="uid"/>
        <field name="email" ldap-name="mail"/>
        <field name="password" ldap-name="user-password"/>
        <field name="other" type="attributes"/>
        <fixed name="ou" ldap-name="ou" value="People"/>
        <ldap-dn>
	  <field-ref name="ou"/>
          <field-ref name="uid"/>
          <field name="dn" type="attributes"/>
        </ldap-dn>
      </object>
    </mapping>
  </directory>
</directories>