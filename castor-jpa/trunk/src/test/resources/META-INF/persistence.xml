<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

    <persistence-unit name="castor">
        <provider>org.castor.jpa.spi.CastorPersistenceProvider</provider>
        <mapping-file>mapping.xml</mapping-file>
        <class>org.castor.jpa.annotations.model.Person</class>
        <class>org.castor.jpa.annotations.model.Actor</class>
        <class>org.castor.jpa.annotations.model.Role</class>
    </persistence-unit>
</persistence>