<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="castorXMLFactoryBean" abstract="true">
        <property name="resolver">
            <ref local="resolver" />
        </property>
    </bean>

    <bean id="marshaller" 
            class="org.castor.spring.xml.CastorMarshallerFactoryBean" 
            parent="castorXMLFactoryBean" />
            
    <bean 
    	id="marshaller-suppress"
    	class="org.castor.spring.xml.CastorMarshallerFactoryBean"
    	parent="castorXMLFactoryBean">
    	<property name="suppressNamespaces" value="true" />
    </bean>

    <bean id="resolver" class="org.castor.spring.xml.CastorResolverFactoryBean">
        <property name="mappingLocations">
            <list>
                <value>mapping.xml</value>
            </list>
        </property>
    </bean>
    
    <bean id="springObjectFactory" class="org.castor.spring.xml.SpringObjectFactory" />

    <bean id="unmarshaller" 
            class="org.castor.spring.xml.CastorUnmarshallerFactoryBean" 
            parent="castorXMLFactoryBean">
            
        <property name="objectFactory">
            <ref local="springObjectFactory" />
        </property>
    </bean>
    
    <bean id="Product" class="org.castor.spring.xml.entity.Product" singleton="false">
        <property name="catalog">
            <value>Fall '07 Catalog</value>
        </property>
    </bean>
    
</beans>
