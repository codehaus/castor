	<build>
		<plugins>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.4</source>
					<target>1.4</target>
<!--
					<excludes>
						<exclude implementation="java.lang.String">SourceGenerator/**</exclude>
